{
  "name": "minimalcss-heroku",
  "version": "1.0.0",
  "description": "Test out minimalcss in a web app",
  "engines": {
    "node": "9.x"
  },
  "scripts": {
    "start": "node server",
    "heroku-postbuild":
      "cd ui/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "cacheDirectories": ["node_modules", "ui/node_modules"],
  "dependencies": {
    "express": "^4.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peterbe/minimalcss-heroku.git"
  },
  "keywords": ["node", "heroku", "create-react-app", "react"],
  "license": "MIT",
  "devDependencies": {}
}
